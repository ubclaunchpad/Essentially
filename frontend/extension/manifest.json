{
    "name": "Essentially",
    "version": "0.9",
    "manifest_version": 3,
    "permissions": ["activeTab", "scripting", "notifications"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Click to show an alert",
        "default_popup": "build/index.html"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "web_accessible_resources": [{
            "resources": ["styles.css"],
            "matches": ["<all_urls>"]
        },

        {
            "resources": ["build/bundle.js"],
            "matches": ["<all_urls>"]
        },

        {
            "resources": ["build/index.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [{
            "matches": ["http://*/*", "https://*/*"],
            "js": ["./build/bundle.js"]
        },
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["./content.js"]
        }
    ]
}